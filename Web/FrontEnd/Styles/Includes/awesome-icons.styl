.awesome-icon
  &s-wrapper
    list-style none
    padding 0
    cf()

  &-wrapper
    background color-blue-jeans-washed
    border-radius 10px
    text-align center
    padding 20px 0
    margin-bottom 20px
    +above(400px)
       col(1/2, cycle: 2)
       text-align center
    +above(768px)
       col(1/3, uncycle: 2, cycle: 3)
       text-align center

  color color-blue-jeans
  background white
  font-size 3em
  line-height 100px
  width 100px
  border-radius 50%
  transition transform 0.1s, color 0.1s
  &:hover
    transform scale(1.2)
    color color-mint